<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hostar Home Page</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap"
    rel="stylesheet">
    <link rel="icon" href="/disney.png">
  <link rel="stylesheet" href="../css/style.css">
</head>

<body>
  <%-include("../includes/sidebar.ejs")%>
        <div class="main">
            <div class="slider">
                <%for(let d of data){%>
                  <% if(id==d._id) {%>
                  <div class="card BigCards">
                      <video class="card-video" id="myVideo" muted loop poster="<%= d.poster.url%>">
                        <source id="video" src="<%=d.video.url%>" type="video/mp4">
                      </video>
                      <div id="videoOverlay" class="video-overlay"></div>
                  </div>
                  <%}%>
                <%}%>
            </div>
          </div>
          <div class="footer">
            <div class="innerFooter">
              <%for(let d of data){%>
                <% if(id==d._id) {%>
                    <div class="card-video-overlay">
                      <h1 class="card-title">
                        <%=d.title%>
                      </h1>
                      <div class="smallScreen">
                      <p class="card-text">
                        <%=d.description%>
                      </p>
                      <p class="card-text"><small>Last updated 3 mins ago</small></p>
                      </div>
                      <div class="buttons">
                        <button class="btn btn-light"><i class="fa-solid fa-play"></i>&nbsp;&nbsp;Subscribe to Watch</button>
                        <button class="btn btn-light plus_btn">+</button>
                      </div>
                </div>
                <%}%>
              <%}%>
            <!--Movies slider  -->
              <div class="container">
                <h4>Popular Movies</h4>
                <button class="nav-button prev" id="prevBtn">&#8249;</button>
                <a href="/hostar/home/allListings">View all<i class="fa-solid fa-angle-right"></i></a>
                <div class="cards-container cardsContainer" id="cardsContainer">
                      <%for(let d of data){%>
                        <%if(d.type=="Movie"){%>
                        <div class="card smallcard" onclick="submitCardData('<%= d._id %>')">
                          <img src="<%=d.poster.url%>" alt="Card Image" class="card-img">
                          <div class="card-info">
                            <h3><%=d.title%></h3>
                            <p><%=d.description%></p>
                          </div>
                          <a href="/hostar/listing/<%=d.id%>/update" class="btn btn-light update">Update</a>
                        </div>
                        <%}%>
                      <%}%>
                </div>
                <button class="nav-button next" id="nextBtn">&#8250;</button>
              </div>

            <!-- Sports slider -->
              <div class="container">
                <h4>Best In Sports</h4>
                <button class="nav-button prev" id="prevBtn">&#8249;</button>
                <a href="/hostar/home/allListings">View all<i class="fa-solid fa-angle-right"></i></a>
                <div class="cards-container cardsContainer" id="cardsContainer">
                  <!-- Cards -->
                        <%for(let d of data){%>
                          <%if(d.type=="Sport"){%>
                          <div class="card smallcard sportcard" onclick="submitCardData('<%= d._id %>')">
                            <img src="<%=d.poster.url%>" alt="Card Image" class="card-img">
                            <div class="card-info">
                              <h3><%=d.title%></h3>
                              <p><%=d.description%></p>
                            </div>
                            <a href="/hostar/listing/<%=d.id%>/update" class="btn btn-light update">Update</a>
                          </div>
                          <%}%>
                        <%}%>
                </div>
                <button class="nav-button next" id="nextBtn">&#8250;</button>
              </div>

              <!-- comedy slider -->
              <div class="container">
                <h4>Comedy Movies</h4>
                <button class="nav-button prev" id="prevBtn">&#8249;</button>
                <a href="/hostar/home/allListings">View all<i class="fa-solid fa-angle-right"></i></a>
                <div class="cards-container cardsContainer" id="cardsContainer">
                  <!-- Cards -->
                        <%for(let d of data){%>
                          <%if(d.type=="Comedy Movie"){%>
                          <div class="card smallcard" onclick="submitCardData('<%= d._id %>')">
                            <img src="<%=d.poster.url%>" alt="Card Image" class="card-img">
                            <div class="card-info">
                              <h3><%=d.title%></h3>
                              <p><%=d.description%></p>
                            </div>
                            <a href="/hostar/listing/<%=d.id%>/update" class="btn btn-light update">Update</a>
                          </div>
                        <%}%>
                        <%}%>
                </div>
                <button class="nav-button next" id="nextBtn">&#8250;</button>
              </div>
              
              <!-- comedy slider -->
              <div class="container lastdiv">
                <h4>South Movies</h4>
                <button class="nav-button prev" id="prevBtn">&#8249;</button>
                <a href="/hostar/home/allListings">View all</a>
                <div class="cards-container cardsContainer" id="cardsContainer">
                  <!-- Cards -->
                        <%for(let d of data){%>
                          <%if(d.type=="South Movie"){%>
                          <div class="card smallcard" onclick="submitCardData('<%= d._id %>')">
                            <img src="<%=d.poster.url%>" alt="Card Image" class="card-img">
                            <div class="card-info">
                              <h3><%=d.title%></h3>
                              <p><%=d.description%></p>
                            </div>
                            <a href="/hostar/listing/<%=d.id%>/update" class="btn btn-light update">Update</a>
                          </div>
                        <%}%>
                        <%}%>
                </div>
                <button class="nav-button next" id="nextBtn">&#8250;</button>
              </div>  
          </div>      
  <script src="/js/script.js"></script>

</body>

</html>
